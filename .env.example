# AWS Configuration for Modulus LMS
# Copy this file to .env.local and fill in your actual values

# Required: AWS Region where your resources are deployed
NEXT_PUBLIC_AWS_REGION=eu-west-2
AWS_REGION=eu-west-2

# AWS Credentials (optional if using IAM roles)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here (if using temporary credentials)

# AWS Resource Identifiers
# EKS Cluster name for Kubernetes metrics
NEXT_PUBLIC_EKS_CLUSTER_NAME=modulus-cluster

# RDS Database instance identifier for database metrics
NEXT_PUBLIC_RDS_INSTANCE_ID=modulus-db

# Application Load Balancer name for traffic metrics
NEXT_PUBLIC_ALB_NAME=modulus-alb

# S3 Bucket name for storage metrics
NEXT_PUBLIC_S3_BUCKET=modulus-storage

# EC2 Instance IDs for system metrics (comma-separated)
# NEXT_PUBLIC_EC2_INSTANCE_IDS=i-1234567890abcdef0,i-0987654321fedcba0

# CloudWatch Configuration
# CLOUDWATCH_LOG_GROUP=/aws/modulus/application
# CLOUDWATCH_DASHBOARD_NAME=ModulusLMS

# Security and Monitoring
# ENABLE_AWS_XRAY=true
# ENABLE_CONTAINER_INSIGHTS=true

# Application Configuration
# DATABASE_URL=postgresql://username:password@modulus-db.region.rds.amazonaws.com:5432/modulus
# REDIS_URL=redis://modulus-redis.region.cache.amazonaws.com:6379

# Development Settings
# NODE_ENV=production
# NEXT_PUBLIC_APP_ENV=production
